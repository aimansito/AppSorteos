{% extends 'base.html.twig' %}

{% block title %}Crear Nuevo Sorteo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>

        .form-control-custom {
            background-color: #ffffdd;
            padding: 10px 15px; 
            border-radius: 8px; 
            transition: all 0.2s;
            box-shadow: none;
        }

        .full-width-form-container {
            max-width: 800px;
            margin: 40px auto; 
            padding: 20px;
        }
        
        .full-width-form-container h1 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-check-input {
            width: 1.25em;
            height: 1.25em;
            margin-right: 0.5rem;
        }
        
        .form-check-label {
            padding-top: 2px;
            font-size: 1.1rem;
        }

        .btn {
            display: inline-block;
            padding: 8px 16px;
            margin-right: 5px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.1s, box-shadow 0.3s;
            border: none;
            text-align: center;
            line-height: 1.5;
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .btn-guardar {
            background-color: #4CAF50;
            color: white;
        }

        .btn-guardar:hover {
            background-color: #43A047;
            color: white;
        }

        .btn-outline-secondary {
            background-color: #757575;
            color: white;
        }

        .btn-outline-secondary:hover {
            background-color: #616161;
        }

        .form-control-custom:focus {
             background-color: #fff; 
             border-color: #4a90e2;
        }

        .form-check {
            margin-bottom: 0.75rem;
            padding-left: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="full-width-form-container">
        <h1>Creaci√≥n del Sorteo</h1>

        {{ include('sorteo/_form.html.twig') }}
    </div>
{% endblock %}
