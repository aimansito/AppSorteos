{% extends 'base.html.twig' %}

{% block title %}Sorteo: {{ sorteo.nombreActividad }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f5f7fa;
        }

        .raffle-detail-container {
            max-width: 950px;
            margin: 50px auto;
            padding: 35px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

        .raffle-detail-container h1 {
            text-align: center;
            color: #3f51b5;
            font-weight: 600;
            margin-bottom: 25px;
            border-bottom: 3px solid #ff9800;
            padding-bottom: 10px;
        }

        .raffle-subtitle {
            color: #3f51b5;
            border-bottom: 2px solid #a0c0ff;
            padding-bottom: 6px;
            margin-top: 30px;
            margin-bottom: 15px;
            font-weight: 500;
        }

        .raffle-info p {
            font-size: 1.05rem;
            margin-bottom: 8px;
        }

        .btn-sortear {
            background-color: #4CAF50;
            color: white;
            font-size: 1.2rem;
            padding: 12px 30px;
            border: none;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .btn-sortear:hover {
            background-color: #43A047;
            transform: translateY(-1px);
        }

        .btn-secondary {
            background-color: #757575;
            color: white;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #616161;
            transform: translateY(-1px);
        }

        .winner-tag {
            color: #d32f2f;
            font-weight: 600;
            background-color: #fdeaea;
            padding: 3px 10px;
            border-radius: 5px;
        }

        .sorteo-list {
            list-style: none;
            padding: 0;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .sorteo-list li {
            background: #f7f9fc;
            padding: 20px;
            border-radius: 8px;
            border-left: 5px solid #3f51b5;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s ease;
        }

        .sorteo-list li:hover {
            transform: translateY(-2px);
        }

        .sorteo-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 10px;
        }

        .meta-item {
            padding: 5px 10px;
            border-radius: 6px;
            font-size: 0.95em;
            background: #eef1f8;
        }

        .action-buttons {
            margin-top: 40px;
            border-top: 1px solid #ddd;
            padding-top: 25px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
            text-align: center;
        }

        .table thead th {
            background-color: #f3f5ff;
            color: #3f51b5;
        }

        .img-fluid {
            max-width: 200px;
            height: auto;
            display:flex;
            margin: 0 auto;
        }

        @media (max-width: 768px) {
            .raffle-detail-container {
                padding: 25px 20px;
                margin: 25px 15px;
            }

            .table-responsive {
                font-size: 0.9rem;
            }

            .btn-sortear, .btn-secondary {
                width: 100%;
                padding: 14px;
                font-size: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {% set participantesOrdenados = participantes|sort((a, b) => 
        (b.esGanador <=> a.esGanador) ?: (a.puesto <=> b.puesto)
    ) %}
    <div class="raffle-detail-container">

        {% if sorteo.imagen is not empty %}
            <img src="{{ asset('uploads/sorteos/' ~ sorteo.imagen) }}" alt="Imagen del sorteo {{ sorteo.nombreActividad }}" class="img-fluid rounded mb-4">
        {% endif %}

        <h1>{{ sorteo.nombreActividad }}</h1>

        {% if sorteo.descripcion %}
            <p class="text-muted">{{ sorteo.descripcion }}</p>
        {% endif %}
        <hr>

        <div class="raffle-info mb-4">
            <h2 class="raffle-subtitle">Informaci칩n general</h2>
            <p><strong>Fecha:</strong> {{ sorteo.fecha|date('d/m/Y H:i') }}</p>
            <p><strong>Lugar:</strong> {{ sorteo.lugar }}</p>
            {% if sorteo.participantesIlimitados %}
                <p><strong>Participantes:</strong> Ilimitados</p>
            {% else %}
                <p><strong>M치x participantes:</strong> {{ sorteo.maxParticipantes }}</p>
            {% endif %}
            <p><strong>N칰mero de ganadores:</strong> {{ sorteo.numeroGanadores }}</p>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <h3 class="raffle-subtitle">Participantes ({{ participantes|length }})</h3>
            
            {% if participantes is empty %}
                <p class="alert alert-info">No hay participantes a칰n.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Correo Electr칩nico</th>
                                <th>C칩digo</th>
                                <th class="text-center">Ganador</th>
                                <th class="text-center">Puesto</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for participante in participantesOrdenados %}
                                <tr>
                                    <td>{{ participante.nombre }}</td>
                                    <td><a href="mailto:{{ participante.email }}">{{ participante.email }}</a></td>
                                    <td><code class="text-muted">{{ participante.codigoEntrada }}</code></td>
                                    <td class="text-center">
                                        {% if participante.esGanador %}
                                            <span class="winner-tag">S칈</span>
                                        {% else %}
                                            No
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% if participante.esGanador %}
                                            {{ participante.puesto }}췈
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <form method="post" action="{{ path('app_participante_delete', {'id': participante.id}) }}" onsubmit="return confirm('쯉eguro que quieres eliminar a este participante del sorteo?');" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participante.id) }}">
                                            <input type="hidden" name="redirect_to_sorteo" value="{{ sorteo.id }}">
                                            <button class="btn btn-sm btn-outline-danger">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}

            <div class="action-buttons">
                {% if not yaSorteado %}
                    <form method="POST" action="{{ path('app_sorteo_sortear', {'id': sorteo.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('sortear' ~ sorteo.id) }}">
                        <button type="submit" class="btn btn-sortear btn-lg">游 Sortear</button>
                    </form>
                {% endif %}
                <a href="{{ path('app_main') }}" class="btn btn-secondary btn-lg">
                    Volver al Listado
                </a>
            </div>

        {% else %}
            <h3 class="raffle-subtitle">Ganadores</h3>
            {% if participantesOrdenados|filter(p => p.esGanador)|length == 0 %}
                <p class="alert alert-warning">A칰n no hay ganadores definidos.</p>
            {% else %}
                <ul class="sorteo-list">
                    {% for participante in participantesOrdenados %}
                        {%if participante.esGanador %} 
                        <li>
                            <h4>{{ participante.puesto ?? '1' }}췈 Puesto</h4>
                            <div class="sorteo-meta">
                                <span class="meta-item"><strong>C칩digo de entrada:</strong> {{ participante.codigoEntrada }}</span>
                                <span class="meta-item"><strong>Iniciales:</strong> {{ participante.setIniciales }}</span>
                            </div>
                        </li>
                        {%endif%}
                    {% endfor %}
                </ul>
            {% endif %}

            <div class="action-buttons">
                <a href="{{ path('app_main') }}" class="btn btn-secondary btn-lg">
                    Volver al Listado
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
