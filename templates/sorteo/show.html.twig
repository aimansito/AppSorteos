{% extends 'base.html.twig' %}

{% block title %}Sorteo: {{ sorteo.nombreActividad }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .raffle-detail-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .raffle-subtitle {
            color: #007bff; /* Azul claro para subtítulos */
            border-bottom: 2px solid #a0c0ff; /* Línea azul debajo del subtítulo */
            padding-bottom: 5px;
            margin-top: 30px;
            margin-bottom: 15px;
        }

        .raffle-info p {
            font-size: 1.1rem;
            margin-bottom: 8px;
        }

        .btn-sortear {
            background-color: #28a745; 
            border-color: #28a745;
            font-size: 1.3rem;
            padding: 12px 28px;
            margin: 0 0 12px 0;
        }
        
        .btn-sortear:hover,
        .btn-sortear:focus,
        .btn-sortear:active {
            background-color: #1e7e34 !important; 
            border-color: #1e7e34 !important;
            box-shadow: none;
        }

        .winner-tag {
            color: #d9534f; 
            font-weight: bold;
            background-color: #fde8e8;
            padding: 2px 8px;
            border-radius: 4px;
        }

        .action-buttons {
            margin-top: 40px;
            border-top: 1px solid #ddd;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            text-align: center;
        }
        .action-buttons form { display: inline-block; }
    </style>
{% endblock %}

{% block body %}
    <div class="raffle-detail-container">

        {% if sorteo.imagen is not empty %}
            <img src="{{ asset('uploads/sorteos/' ~ sorteo.imagen) }}" alt="Imagen del sorteo {{ sorteo.nombreActividad }}" class="sorteo-imagen">
        {% endif %}
        <h1>Detalles del Sorteo</h1>
        <hr>

        <div class="raffle-info mb-4">
            <h2 class="raffle-subtitle">Sorteo: {{ sorteo.nombreActividad }}</h2>
            <p><strong>Fecha:</strong> {{ sorteo.fecha|date('d/m/Y H:i') }}</p>
            <p><strong>Lugar:</strong> {{ sorteo.lugar }}</p>
            {% if sorteo.participantesIlimitados %}
                <p><strong>Participantes:</strong> Ilimitados</p>
            {% else %}
                <p><strong>Máx participantes:</strong> {{ sorteo.maxParticipantes }}</p>
            {% endif %}
            <p><strong>Número de ganadores:</strong> {{ sorteo.numeroGanadores }}</p>
        </div>

        <h3 class="raffle-subtitle">Participantes ({{ participantes|length }})</h3>
        
        {% if participantes is empty %}
            <p class="alert alert-info">No hay participantes aún.</p>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Correo Electrónico</th>
                            <th>Código</th>
                            <th class="text-center">Ganador</th>
                            <th class="text-center">Puesto</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participante in participantes %}
                            <tr>
                                <td>{{ participante.nombre }}</td>
                                <td><a href="mailto:{{ participante.email }}">{{ participante.email }}</a></td>
                                <td><code class="text-muted">{{ participante.codigoEntrada }}</code></td>
                                <td class="text-center">
                                    {% if participante.esGanador %}
                                        <span class="winner-tag">SÍ</span>
                                    {% else %}
                                        No
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    {% if participante.esGanador %}
                                        {{ participante.puesto }}º
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <form method="post" action="{{ path('app_participante_delete', {'id': participante.id}) }}" onsubmit="return confirm('¿Seguro que quieres eliminar a este participante del sorteo?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participante.id) }}">
                                        <input type="hidden" name="redirect_to_sorteo" value="{{ sorteo.id }}">
                                        <button class="btn btn-sm btn-outline-danger">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

        <div class="action-buttons">
            <form method="POST" action="{{ path('app_sorteo_sortear', {'id': sorteo.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('sortear' ~ sorteo.id) }}">
                <button type="submit" class="btn btn-lg btn-sortear text-white">Sortear</button>
            </form>

            <a href="{{ path('app_main') }}" class="btn btn-secondary btn-lg">
                Volver al Listado
            </a>
        </div>
    </div>
{% endblock %}
