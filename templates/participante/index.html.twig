{% extends 'base.html.twig' %}

{% block title %}Participante index{% endblock %}

{% block body %}
    <h1>Participante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>CodigoEntrada</th>
                <th>EsGanador</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participante in participantes %}
            <tr>
                <td>{{ participante.id }}</td>
                <td>{{ participante.nombre }}</td>
                <td>{{ participante.email }}</td>
                <td>{{ participante.codigoEntrada }}</td>
                <td>{{ participante.esGanador ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_participante_show', {'id': participante.id}) }}">show</a>
                    <a href="{{ path('app_participante_edit', {'id': participante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_participante_new') }}">Create new</a>
{% endblock %}
