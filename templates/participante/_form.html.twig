{# templates/participante/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_row(form.nombre, {
            'attr': {'class': 'form-control form-control-lg form-control-yellow'}
        }) }}
    </div>

    <div class="mb-3">
        {{ form_row(form.email, {
            'attr': {'class': 'form-control form-control-lg form-control-yellow'}
        }) }}
    </div>

    <div class="mb-3">
        {{ form_row(form.codigoEntrada, {
            'attr': {'class': 'form-control form-control-lg form-control-yellow'}
        }) }}
    </div>

    <div class="d-grid mt-4">
        <button type="submit" class="btn btn-custom-blue btn-lg text-white">
            {{ button_label|default('Guardar') }}
        </button>
    </div>
    
{{ form_end(form) }}