{# Página pública para apuntarse al sorteo: incluye formulario y términos #}
{% extends 'base.html.twig' %}

{% block title %}Apuntarse al Sorteo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .full-width-form-container {
            max-width: 800px;
            margin: 40px auto; 
            padding: 20px;
        }
        
        .form-control-yellow {
            background-color: #ffffdd;
            border-color: #a0c0ff;
        }
        
        .btn {
            display: inline-block;
            padding: 8px 16px;
            margin-right: 5px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.1s, box-shadow 0.3s;
            border: none;
            text-align: center;
            line-height: 1.5;
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .btn-guardar {
            background-color: #4CAF50;
            color: white;
        }

        .btn-guardar:hover {
            background-color: #43A047;
            color: white;
        }

        .btn-outline-secondary {
            background-color: #757575;
            color: white;
        }

        .btn-outline-secondary:hover {
            background-color: #616161;
        }
        
        .full-width-form-container h1 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-check-input {
            width: 1.25em;
            height: 1.25em;
            margin-right: 0.5rem;
        }
        
        .form-check-label {
            padding-top: 2px;
            font-size: 1.1rem;
        }

        /* Caja destacada para aceptar términos */
        .terms-box {
            background-color: #fff8e1; /* amarillo suave */
            border: 1px dashed #f4b400;
            padding: 12px 14px;
            border-radius: 8px;
            text-align: center;            /* Centra el texto */
            display: flex;                 /* Controla input + label */
            align-items: center;
            justify-content: center;       /* Centra el conjunto (checkbox + texto) */
            gap: 8px;
            flex-wrap: wrap;               /* Evita desbordes en pantallas pequeñas */
        }
        .terms-box .form-check-input { order: 0; }
        .terms-box .form-check-label { order: 1; }
        .terms-box .form-check-label a {
            color: #0d6efd; /* enlace azul */
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .full-width-form-container { margin: 24px auto; padding: 16px; }
            .full-width-form-container h1 { font-size: 1.6rem; }
        }

        @media (max-width: 480px) {
            .btn { width: 100%; max-width: 280px; }
            .form-check-label { font-size: 1rem; }
            .form-check-input { width: 1.3em; height: 1.3em; }
            .terms-box { gap: 6px; }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="full-width-form-container">
        <h1>Apuntarse al Sorteo</h1>
        <hr>
        {{ include('participante/_form.html.twig') }}

    </div>
{% endblock %}