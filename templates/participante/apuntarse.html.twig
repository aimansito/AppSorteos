{% extends 'base.html.twig' %}

{% block title %}Apuntarse al Sorteo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .full-width-form-container {
            max-width: 800px;
            margin: 40px auto; 
            padding: 20px;
        }
        
        .form-control-yellow {
            background-color: #ffffdd;
            border-color: #a0c0ff;
        }
        
        .btn {
            display: inline-block;
            padding: 8px 16px;
            margin-right: 5px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.1s, box-shadow 0.3s;
            border: none;
            text-align: center;
            line-height: 1.5;
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .btn-guardar {
            background-color: #4CAF50;
            color: white;
        }

        .btn-guardar:hover {
            background-color: #43A047;
            color: white;
        }

        .btn-outline-secondary {
            background-color: #757575;
            color: white;
        }

        .btn-outline-secondary:hover {
            background-color: #616161;
        }
        
        .full-width-form-container h1 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-check-input {
            width: 1.25em;
            height: 1.25em;
            margin-right: 0.5rem;
        }
        
        .form-check-label {
            padding-top: 2px;
            font-size: 1.1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="full-width-form-container">
        <h1>Apuntarse al Sorteo</h1>
        <hr>
        {{ include('participante/_form.html.twig') }}

    </div>
{% endblock %}