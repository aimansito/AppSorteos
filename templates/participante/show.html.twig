{% extends 'base.html.twig' %}

{% block title %}Participante{% endblock %}

{% block body %}
    <style>
        .btn {
            display: inline-block;
            padding: 8px 16px;
            margin-right: 5px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.1s, box-shadow 0.3s;
            border: none;
            text-align: center;
            line-height: 1.5;
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);   
        }

        .btn-editar {
            background-color: #3f51b5;
            color: white;
        }

        .btn-editar:hover {
            background-color: #303f9f;
            color: white;
        }

        .btn-outline-secondary {
            background-color: #757575;
            color: white;
        }

        .btn-outline-secondary:hover {
            background-color: #616161;
        }
        
    </style>

    {% if is_granted('ROLE_ADMIN') %}
        <h1>Participante</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ participante.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ participante.nombre }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ participante.email }}</td>
                </tr>
                <tr>
                    <th>Código de entrada</th>
                    <td>{{ participante.codigoEntrada }}</td>
                </tr>
                <tr>
                    <th>Ganador</th>
                    <td>{{ participante.esGanador ? 'Sí' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_main') }}" class="btn btn-outline-secondary">
            Volver al Listado
        </a>

        <a href="{{ path('app_participante_edit', {'id': participante.id}) }}" class="btn btn-editar">Editar</a>
        
    {% else %}
        <h1>Necesitas permisos de Administrador</h1>
        <a href="{{ path('app_main') }}" class="btn btn-outline-secondary">
            Volver al Listado
        </a>
    {% endif %}

{% endblock %}
